ini = { SOI ~ bom? ~ (pair | comment | NEWLINE)* ~ section* ~ EOI }
bom = _{ "\u{feff}" }
WHITESPACE = _{ "\t" }

// section
section = { " "* ~ "[" ~ name ~ "]" ~ " "* ~ body }
name = @{ char+ }
char = { ASCII_ALPHANUMERIC | "." | "_" | "/" | " " | ";" | "#" | "\\" }
body = { (NEWLINE ~ (pair | comment)?)* }

// key-value pair
pair = { key ~ "=" ~ value }
key = @{ char{1,50} }
value = @{ (char | "="){0,255} }

comment = { indicator ~ " "* ~ value? }
indicator = { "#" | ";" }
